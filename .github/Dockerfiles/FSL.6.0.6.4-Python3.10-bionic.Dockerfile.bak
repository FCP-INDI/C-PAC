FROM ghcr.io/fcp-indi/c-pac/ubuntu:python3.10-bionic-non-free
USER root
RUN curl -LOJ https://fsl.fmrib.ox.ac.uk/fsldownloads/fslconda/releases/fslinstaller.py \
  && mkdir -p /usr/share/fsl/ \
  && python3 fslinstaller.py --fslversion 6.0.6.4 -d /usr/share/fsl/6.0
ENTRYPOINT ["/bin/bash"]

# set user
USER c-pac_user

LABEL org.opencontainers.image.description "NOT INTENDED FOR USE OTHER THAN AS A STAGE IMAGE IN A MULTI-STAGE BUILD \
FSL 5.0.10 stage"
LABEL org.opencontainers.image.source https://github.com/FCP-INDI/C-PAC
